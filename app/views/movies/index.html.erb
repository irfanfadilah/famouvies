<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th>Tmdb</th>
      <th>Title</th>
      <th>Overview</th>
      <th>Release date</th>
      <th>Poster</th>
      <th>Backdrop</th>
      <th>Language</th>
      <th>Popularity</th>
      <th>Rating</th>
      <th>Vote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.tmdb %></td>
        <td><%= movie.title %></td>
        <td><%= movie.overview %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.poster %></td>
        <td><%= movie.backdrop %></td>
        <td><%= movie.language %></td>
        <td><%= movie.popularity %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.vote %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

